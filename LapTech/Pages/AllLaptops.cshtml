@page
@model LapTech.Pages.AllLaptopsModel

<h1>All Laptops</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Manufacturer</th>
            <th>GPU</th>
            <th>CPU</th>
            <th>RAM</th>
            <th>Storage</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var laptop in Model.Laptops)
        {
            <tr>
                <td>@laptop.Id</td>
                <td>@laptop.Manufacturer</td>
                <td>@laptop.GPU?.Name</td> <!-- Display GPU Name -->
                <td>@laptop.CPU?.Name</td> <!-- Display CPU Name -->
                <td>@laptop.RAM</td>
                <td>@laptop.Storage</td>
                <td>@laptop.Price</td>
            </tr>
        }
    </tbody>
</table>
